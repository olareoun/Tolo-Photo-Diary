<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8">

        <title>reveal.js - The HTML Presentation Framework</title>

        <meta name="description" content="A framework for easily creating beautiful presentations using HTML">
        <meta name="author" content="Hakim El Hattab">

        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

        <link rel="stylesheet" href="../css/bootstrap.css" id="bootstrap-theme">
        <link rel="stylesheet" href="../css/reveal.min.css">
        <link rel="stylesheet" href="../css/theme/default.css" id="reveal-theme">
        <link rel="stylesheet" href="../css/styles.css" id="reveal-theme">

        <!--[if lt IE 9]>
        <script src="lib/js/html5shiv.js"></script>
        <![endif]-->
    </head>

    <body>
        <div class="navbar transparent navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <a class="brand" href="/">
                    <img src='img/notes2reveallogo.png' class='logo' alt='notes to reveal.js logo'/>
                </a>
                <form class="navbar-form pull-right form-inline" style="padding-right: 10px;">
                    <button class="btn btn-mini btn-success" id="toggleTheme">Theme</button>
                </form>
            </div>
        </div>

        <div class="reveal">
            <div class="slides">
                <%= yield %>
            </div>
        </div>

      <script>
        window.onload = function(){
            $('audio').each(function(){
                $(this).attr('controls', 'controls');
                $(this).attr('data-autoplay', true);
                $(this).attr('width', '100%');
                $(this).attr('heigth', '100%');
            });

            $('.slides table').each(function(){
                $(this).addClass('n2e-table');
            });

            $('.slides a').each(function(){
                $(this).attr('target', '_blank');
            });

            var themes = [
                'default',
                'sky',
                'beige',
                'simple',
                'serif',
                'night',
                'moon',
                'solarized'
            ];

            var themeIndex = 1;

            $('#toggleTheme').on('click', function(event){
                setTheme(themes[themeIndex]);
                themeIndex++;
                if (themeIndex >= themes.length) themeIndex = 0;
                event.stopPropagation();
                return false;
            });

            var changeTheme = function() {
                var theme = $(this).val();
                setTheme(theme);
            };

            var setTheme = function(theme){
                var newtheme = '../css/theme/' + theme + '.css'
                $('#reveal-theme').attr('href', newtheme);
                $('#theme-select').blur();
            };

            $('#theme-select').bind('change', changeTheme);

            correctTitlesOverflow();
            correctContentsOverflow();
        };
      </script>

        <script src="../js/vendor/reveal.min.js"></script>
        <script src="../js/vendor/jquery-1.8.2.min.js"></script>
        <script src="../js/overflow.js"></script>

        <script>
            Reveal.addEventListener( 'slidechanged', function( event ) {
                correctTitlesOverflow();
                correctContentsOverflow();
            } );

            // Full list of configuration options available here:
            // https://github.com/hakimel/reveal.js#configuration
            Reveal.initialize({
                controls: true,
                progress: true,
                history: true,
                center: true,

                theme: Reveal.getQueryHash().theme, // available themes are in /css/theme
                transition: Reveal.getQueryHash().transition || 'default', // default/cube/page/concave/zoom/linear/fade/none

            });

        </script>
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-42250456-1', 'notebook2reveal.com');
          ga('send', 'pageview');

        </script>
    </body>
</html>
